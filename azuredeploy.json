{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostingPlanName": {
      "defaultValue": "SonarQubeAppServicePlan",
      "minLength": 1,
      "type": "String"
    },
    "siteLocation": {
      "defaultValue": "North Central US",
      "type": "String"
    },
    "siteName": {
      "defaultValue": "SonarQubeAppService",
      "type": "String"
    },
    "skuName": {
      "defaultValue": "B1",
      "allowedValues": [
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1V2",
        "P2V2",
        "P3V2",
        "P1V3",
        "P2V3",
        "P3V3",
        "P1",
        "P2",
        "P3"
      ],
      "type": "String"
    },
    "repoUrl": {
      "defaultValue": "https://github.com/vanderby/SonarQube-AzureAppService",
      "type": "String"
    },
    "branch": {
      "defaultValue": "master",
      "type": "String"
    },
    "SonarQube Edition": {
      "defaultValue": "Community",
      "allowedValues": [
        "Community",
        "Developer",
        "Enterprise",
        "Data Center"
      ],
      "type": "String"
    },
    "SonarQube Version": {
      "defaultValue": "Latest",
      "type": "String",
      "metadata": {
        "description": "Specific version of SQ to download e.g. 7.9.1 or 8.0. Leave blank or set to 'Latest' for most recent version."
      }
    }
  },
  "variables": {
    "deploymentTelemetryKey": "e15aa4db-a1cc-4622-844f-e7dd01596983"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[parameters('hostingPlanName')]",
      "location": "[parameters('siteLocation')]",
      "sku": {
        "name": "[parameters('skuName')]"
      },
      "properties": {
        "name": "[parameters('hostingPlanName')]"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('siteName')]",
      "location": "[parameters('siteLocation')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
      ],
      "properties": {
        "name": "[parameters('siteName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "clientAffinityEnabled": false
      },
      "resources": [
        {
          "type": "config",
          "apiVersion": "2022-09-01",
          "name": "web",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('siteName'))]"
          ],
          "properties": {
            "alwaysOn": false,
            "javaVersion": "17",
            "javaContainer": "TOMCAT",
            "javaContainerVersion": "9.0"
          }
        },
        {
          "type": "config",
          "apiVersion": "2022-09-01",
          "name": "appsettings",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('siteName'))]"
          ],
          "properties": {
            "Deployment_Telemetry_Instrumentation_Key": "[variables('deploymentTelemetryKey')]",
            "SonarQubeEdition": "[parameters('SonarQube Edition')]",
            "SonarQubeVersion": "[parameters('SonarQube Version')]"
          }
        },
        {
          "type": "sourcecontrols",
          "apiVersion": "2022-09-01",
          "name": "web",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]",
            "[concat('Microsoft.Web/Sites/', parameters('siteName'), '/config/web')]"
          ],
          "properties": {
            "RepoUrl": "[parameters('repoUrl')]",
            "branch": "[parameters('branch')]",
            "IsManualIntegration": true
          }
        }
      ]
    }
  ]
}